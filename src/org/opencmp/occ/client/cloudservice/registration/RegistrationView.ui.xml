<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:d="urn:import:com.google.gwt.dom.client">

	<g:HTMLPanel >
		<div class="titleName">Registration page</div>
		<hr />
			<div class="clear"></div>
		<div class="regCloudSizerTitel " styleName="regCloudSizerTitel ">
			<g:Label text="selected OpenCloudConfigurator" ui:field="serviceLabel" styleName="text" />
			<div class=".regCloudSizerDataText" styleName=".regCloudSizerDataText">
				<g:Label text="Number of vCPUs"/>
				<g:Label text="Memory(in MB)"  />
				<g:Label text="Storage(in GB)"/>
				<g:Label text="Monthly Price(in €)*"  />
				<g:Label text="Server-Region"  />
				<g:Label text="Cloud Apps"	/>
			</div>
			<div class="clear"></div>
			<div class=".regCloudSizerDataText" styleName=".regCloudSizerDataText">
				<g:Label ui:field="cpuLabel"/>
				<g:Label ui:field="ramLabel"  />
				<g:Label ui:field="hddLabel" />
				<g:Label ui:field="priceLabel"  />
				<g:Label ui:field="locationLabel"  />
				<g:Label ui:field="cloudAppsLabel"/>
			</div>
			<g:Label text="* Free 30-day Trial" styleName="smallText" width="200px"/>
			<div class="clear"></div>
			<g:Button  title="Wenn du dein OpenCloudConfigurator ändern willst" text="Change" ui:field="changeButton" styleName="change" />
		</div>
		<div class="clear"></div>
		<hr />
		<div class="regCloudDataAll" styleName="regCloudDataAll">
			<div class="daten" styleName="daten">
				<h3>Personal data</h3>
				<g:Label text="Name*" ui:field="nameLabel" styleName="form1" />
				<g:TextBox title="z.B. Bob" text="" ui:field="nameValue" focus="true" visibleLength="15"/>
				<g:Label text="Last name*" ui:field="lNameLabel"  styleName="form1" />
				<g:TextBox title="z.B. Alison" text="" ui:field="lNameValue" visibleLength="15"/>
				<g:Label text="Company" ui:field="firmaLabel"  styleName="form1" />
				<g:TextBox title="z.B. SuperFirma" text="" ui:field="firmaValue" visibleLength="15"/>
				<g:Label text="E-Mail*" ui:field="emailLabel"  styleName="form1" />
				<g:TextBox title="z.B. my@mail.com" text="" ui:field="emailValue" visibleLength="15"/>
				<g:Label text="Confirm E-Mail*" ui:field="email2Label"  styleName="form1"  />
				<g:TextBox title="z.B. my@mail.com" text="" ui:field="email2Value" visibleLength="15"/>
				<g:Label text="Create a Password*" ui:field="passLabel"   styleName="form1" />
				<g:PasswordTextBox title="must be min. 6 sings, min. 1 sing small or Big, min. 1 number and any from @#$%(ex. abc12D%)" text="" ui:field="passValue" visibleLength="15" styleName="gwt-TextBox"/>
				<g:Label text="Confirm your password*" ui:field="pass2Label"   styleName="form1" width="140px" height="40px" />
				<g:PasswordTextBox title="must be min. 6 sings, min. 1 sing small or Big, min. 1 number and any from @#$%(ex. abc12D%)" text="" ui:field="pass2Value" visibleLength="15" styleName="gwt-TextBox"/>
			</div>
			<g:Label text="" ui:field="errorLabel" />
			<div class="adress" styleName="adress">
				<h3>Address</h3>
				<g:Label text="Street" ui:field="streetLabel"  styleName="form2"  />
				<g:TextBox title="z.B. Teststr." text="" ui:field="streetValue" visibleLength="15"/>
				<g:Label text="House number*" ui:field="houseLabel"  styleName="form2" />
				<g:TextBox title="z.B. 9" text="" ui:field="houseValue" visibleLength="15"/>
				<g:Label text="Postcode*" ui:field="postLabel"  styleName="form2"/>
				<g:TextBox title="z.B. 55555" text="" ui:field="postValue" visibleLength="15"/>
				<g:Label text="City*" ui:field="cityLabel"  styleName="form2"/>
				<g:TextBox title="z.B. Köln" text="" ui:field="cityValue" visibleLength="15"/>
				<g:Label text=" *mandatory fields" ui:field="infoLabel"  styleName="smallText"/>
			</div>
			<div class="clear"></div>
			<g:Button title="ok" text="Submit" ui:field="korrektButton" styleName="submitButton" />  
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
